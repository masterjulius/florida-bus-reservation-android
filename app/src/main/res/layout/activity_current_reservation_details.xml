<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.app.florida_bus_reservation.myapplication.currentReservationDetails">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lblReservationCoe"
                android:text="Reservation Code:"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_width="100dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/txtReservationCode"
                android:text="xxxxxx"
                android:textColor="@color/cardview_dark_background"
                android:layout_width="210dp"
                android:layout_marginLeft="20dp"
                android:layout_height="20dp"
                android:layout_alignBaseline="@+id/lblReservationCoe"
                android:layout_alignBottom="@+id/lblReservationCoe"
                android:layout_toRightOf="@+id/lblReservationCoe" />

            <!--Depature Date-->

            <!--Button here-->

            <Button

                android:layout_marginTop="20dp"
                android:layout_below="@+id/lblReservationCoe"
                android:id="@+id/btnCancelReservation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:background="@color/colorAccent"
                android:textColor="@color/mdtp_white"
                android:text="CANCEL"
                />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
